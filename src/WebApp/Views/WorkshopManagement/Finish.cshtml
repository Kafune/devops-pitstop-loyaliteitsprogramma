@model Pitstop.WebApp.ViewModels.LoyaltyWorkshopViewmodel
@{
    ViewData["Title"] = "Finish Maintenance job";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Workshop Management - finish maintenance job</h3>

<form asp-controller="WorkshopManagement" asp-action="FinishMaintenanceJob" method="post">
    <div class="form-group">
        <label asp-for="WorkshopManagementFinishViewModel.ActualStartTime"></label>
        <input asp-for="WorkshopManagementFinishViewModel.ActualStartTime" type="text" class="form-control" />
        <span asp-validation-for="WorkshopManagementFinishViewModel.ActualStartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkshopManagementFinishViewModel.ActualEndTime"></label>
        <input asp-for="WorkshopManagementFinishViewModel.ActualEndTime" type="text" class="form-control" />
        <span asp-validation-for="WorkshopManagementFinishViewModel.ActualEndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkshopManagementFinishViewModel.Notes"></label>
        <input asp-for="WorkshopManagementFinishViewModel.Notes" type="text" class="form-control" />
        <span asp-validation-for="WorkshopManagementFinishViewModel.Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoyaltyManagementViewModel.SelectedVehicleLicenseNumber"></label>
        <input asp-for="LoyaltyManagementViewModel.SelectedVehicleLicenseNumber" type="text" class="form-control" readonly />
        <span asp-validation-for="LoyaltyManagementViewModel.SelectedVehicleLicenseNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoyaltyManagementViewModel.LoyaltyPoints"></label>
        <input asp-for="LoyaltyManagementViewModel.LoyaltyPoints" type="text" class="form-control" readonly />
        <span asp-validation-for="LoyaltyManagementViewModel.LoyaltyPoints" class="text-danger"></span>
    </div>
    <p>test</p>
    <input asp-for="WorkshopManagementFinishViewModel.Date" type="hidden" />
    <input asp-for="WorkshopManagementFinishViewModel.Id" type="hidden" />
    <span><button id="CompleteButton" type="submit" class="btn btn-default">Complete</button></span>
    <span><a id="BackButton" asp-action="Details" asp-controller="WorkshopManagement" asp-route-planningDate="@Model.WorkshopManagementFinishViewModel.Date.ToString("yyyy-MM-dd")" asp-route-jobId="@Model.WorkshopManagementFinishViewModel.Id" class="btn btn-default">Cancel</a></span>
</form>


